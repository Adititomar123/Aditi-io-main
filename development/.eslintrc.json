{
  "extends": "./node_modules/gts",
  "root": true,
  "rules": {
    "prettier/prettier": 0
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "node/no-unpublished-require": "off",
        "node/no-unpublished-import": "off",
        "no-cond-assign": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
